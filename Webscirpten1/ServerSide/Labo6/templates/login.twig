{% extends 'master.twig' %}

{% block pageContent %}

    <div class="box" id="boxCompleteTodo">

        <h2>Login</h2>

        <div class="boxInner">
            <form action="{{ action }}" method="post">
                <fieldset class="columns">
                    <dd><label for="username" class="column column-12">Username:</label></dd>
                    <dt><input type="text" id="username" name="username" value="{{ username }}" autocomplete="off" /></dt>

                    <dd><label for="password" class="column column-12">Password:</label></dd>
                    <dt><input id="password" type="password" name="password" value="" autocomplete="off" /></dt>


                    <input type="hidden" name="moduleAction" id="moduleAction" value="login" />
                    <label for="btnSubmit" class="column column-12 alignLeft"><input type="submit" id="btnSubmit" name="btnSubmit" value="Login" /></label>
                    <label class="column column-12 cancel alignRight"><a href="register.php" title="Register">Register</a></label>
                </fieldset>
            </form>
        </div>

    </div>

    {% include 'partials/formerrors.twig' %}

{% endblock %}
