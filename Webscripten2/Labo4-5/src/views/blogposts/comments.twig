{# extend the parent tpl #}
{% extends './layout.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'Blogpost' %}

{% block pageContent %}
    <p class="breadcrumb"><a href="{{ app.request.baseUrl }}/">Blog</a> &raquo; Blogpost</p>
    <section class="comments">
        <h1>Comments on &ldquo;{{ blogpost.title }}&rdquo;</h1>
        {% if comments %}
            {% for comment in comments %}
                <article>
                    <p>On <em>{{ comment.date }}</em>, <em><a href="mailto:{{ comment.email }}">{{ comment.author }}</a></em> wrote:</p>
                    <blockquote>{{ comment.content  | raw }}</blockquote>
                </article>
            {% endfor %}
        {% else %}
            <p>No comments to show!</p>
        {% endif %}
    </section>
    <p><a href="{{ app.request.baseUrl }}/blogposts/{{ blogpost.id }}">&larr; Back to blogpost</a></p>


{% endblock %}